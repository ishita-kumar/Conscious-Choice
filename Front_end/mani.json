{
    "manifest_version": 2,
    "name": "Amazon Ratings",
    "version": "2.0.1",
    "description": "Gets you a rating for your web extension",
    "author": "Ishita Kumar",
    "icons": {
      "128": "icon.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "http://www.amazon.com/*",
          "https://www.amazon.com/*",
          "http://smile.amazon.com/*",
          "https://smile.amazon.com/*",
          "https://www.amazon.ca/*",
          "https://www.amazon.co.uk/*",
          "http://www.amazon.it/*",
          "https://www.amazon.it/*",
          "https://www.amazon.fr/*",
          "https://www.amazon.es/*"
        ],
        "js": ["contentscript.js"],
        "run_at": "document_idle",
        "all_frames": false
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png",
      "default_title": "Amazon ratings"
    },
  
    "permissions": ["activeTab","alarms"]
  }
  